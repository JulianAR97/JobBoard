<!--form_for is deprecated-->
<%= form_with(model: listing, url: url) do |f| %>
  <% if listing.errors.any? %>
    <div id="error_explanation">
      <% listing.errors.each do |error| %>
        <%= error.full_message %><br>
      <% end %>
      <br>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class:'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label "Description" %>
    <%= f.text_area :content, class:'form-control' %>
  </div>
  
  <div class="custom-control custom-radio">
    
    <%= f.radio_button :difficulty, 'easy', class:'custom-control-input' %>
    <%= f.label 'easy', class: 'custom-control-label'%>
    
  </div>

  <div class="form-group">
    <%= f.label :price %>
    <%= f.number_field :price, class:'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit class:'btn btn-primary'%>
  </div>

<% end %>