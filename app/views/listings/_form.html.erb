<!--form_for is deprecated-->

<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#formModal"> Add Listing </button>


<div class="modal" id="formModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header text-center">
        <h4 class="modal-title w-100">New Listing</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      <div class="modal-body">
      
        <%= form_with(model: listing, url: url) do |f| %>
          <% if listing.errors.any? %>
            <div id="error_explanation">
              <% listing.errors.each do |error| %>
                <%= error.full_message %><br>
              <% end %>
              <br>
            </div>
          <% end %>

          <div class="input-group mb-3">
            <div class= "input-group-prepend">
              <span class="input-group-text">Title</span>
            </div>
            <%= f.text_field :title, class:'form-control', placeholder:'Enter creative title here...' %>
          </div>

          <div class="input-group mb-3">
            <div class= "input-group-prepend">
              <span class="input-group-text">Description</span>
            </div>
            <%= f.text_area :content, class:'form-control', rows: 6, placeholder: lorem_ipsum(300) %>
          </div>


          Difficulty 
          <div class="custom-control custom-radio">
            <%= f.radio_button :skill_level, 'beginner', class:'custom-control-input', id:'listing_beginner' %>
            <%= f.label 'beginner', class: 'custom-control-label'%>
          </div>

          <div class="custom-control custom-radio">
            <%= f.radio_button :skill_level, 'intermediate', class:'custom-control-input', id:'listing_intermediate' %>
            <%= f.label 'intermediate', class: 'custom-control-label'%>
          </div>

          <div class="custom-control custom-radio">
            <%= f.radio_button :skill_level, 'expert', class:'custom-control-input', id:'listing_expert' %>
            <%= f.label 'expert', class: 'custom-control-label'%>
          </div>
          <br>
          <div class="form-group tags">
            <%= f.label "Select up to 5 tags:"%><br>
            <%= f.collection_check_boxes(:tag_ids, Tag.order(:name), :id, :name) do |box|%>
        
              <%= box.label class:"custom-checkbox" do%>
                <%= box.check_box%>
                <span class="checkmark <%= get_tag_class(box.object.name)%>""><%= box.text %></span>
              <% end %>
            <% end %>
          </div>

          <div class="form-group">
            <%= f.label :price %>
            <%= f.number_field :price, class:'form-control', placeholder: 'Enter a price...' %>
          </div>

          <div class="form-group">
            <%= f.submit class:'btn btn-success'%>
          </div>

        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
      </div>
    
    </div>
  </div>

</div>
