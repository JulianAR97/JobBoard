<!--form_for is deprecated-->

<button type="button" class="btn y-bg" data-toggle="modal" data-target="#formModal"><%=modal_name%></button>


<div class="modal lb-bg" id="formModal">
  <div class="modal-dialog">
    <div class="modal-content lb-bg">
      <div class="modal-header text-center">
        <h3 class="modal-title w-100 mb-text">New Listing</h3>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      <div class="modal-body">
      
        <%= form_with(model: listing, url: url) do |f| %>
          <% if listing.errors.any? %>
            <div id="error_explanation">
              <% listing.errors.each do |error| %>
                
                <%= error.full_message %><br>
              <% end %>
              <br>
            </div>
          <% end %>

          <% if_path = 'listings/modal_partials/input_fields'%>
          <%= render partial: if_path, locals: {f: f, label_text: 'Title', placeholder: 'Enter a creative title...', rows: nil, input_type: 'text_field'}%>
          <%= render partial: if_path, locals: {f: f, label_text: 'Content', placeholder: lorem_ipsum(300), rows: 6, input_type: 'text_area'}%>
          <%= render partial: if_path, locals: {f: f, label_text: 'Price', placeholder: 'Enter a price...', rows: nil, input_type: 'number_field'}%>
          
          <%= render partial: 'listings/modal_partials/label', locals: {label_text: 'Select a Skill Level'}%>
      
          <div class="form-group tags" style="text-align: center">
            <%= f.collection_radio_buttons(:skill_level, valid_skill_levels, :to_s, :to_s, {}, required: true) do |radio| %>
              <%= radio.label class: "custom-checkbox" do %>
                <%= radio.radio_button %>
                <span class="checkmark <%=radio.text%>"><%= radio.text %></span>
              <% end %>
            <% end %>
          </div>
          
          <%= render partial: 'listings/modal_partials/label', locals: {label_text: 'Select Up To 5 Tags'}%>
          
          <div class="form-group tags" style="text-align: center">
            <%= f.collection_check_boxes(:tag_ids, Tag.order(:name), :id, :name, limit:5) do |box|%>
        
              <%= box.label class:"custom-checkbox" do%>
                <%= box.check_box %>
                <span class="checkmark <%= get_tag_class(box.object.name)%>"><%= box.text %></span>
              <% end %>
            <% end %>
          </div>
          

          <div class="form-group">
            <%= f.submit class:'btn y-bg btn-block'%>
          </div>

        <% end %>
      </div>
      
      <div class="modal-footer">
        <button type="button" class="btn r-bg" data-dismiss="modal">Close</button>
      </div>
    
    </div>
  </div>

</div>


