<div class='p-15' style="max-width: 400px">
  <h2>Sign up</h2>
  <%= render "devise/shared/error_messages", resource: resource %>
  <br>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <div class="input-group mb-3 lg-bg">
      <div class="input-group-prepend">
        <span class="input-group-text mb-bg w-text">Email</span>
      </div>
      <!-- autofocus attribute automatically selects the specified field when page loads -->
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "johnnyappleseed@yahoo.com", class: 'form-control lg-bg navy-text' %>
    </div>

    <div class="input-group mb-3 lg-bg">
      <div class="input-group-prepend">
        <span class="input-group-text mb-bg w-text">Password</span>
      </div>
      <!-- autofocus attribute automatically selects the specified field when page loads -->
      <%= f.password_field :password, autocomplete: "new-password", class: 'form-control lg-bg navy-text' %>
    </div>

    <div class="input-group mb-3 lg-bg">
      <div class="input-group-prepend">
        <span class="input-group-text mb-bg w-text" style="width: 96px">Comfirm</span>
      </div>
      <!-- autofocus attribute automatically selects the specified field when page loads -->
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control lg-bg navy-text' %>
    </div>



    <br>
    <div class="form-group">
      <%= f.submit "Sign Up", class: 'dg-bg btn btn-block' %>
    </div>


  <% end %>
</div>
